<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |item| %>
      <li>
        <%= item[:product].name %> - <%= item[:quantity] %> x <%= number_to_currency(item[:product].price) %>
        = <%= number_to_currency(item[:total_price]) %>
        <%= button_to 'Remove', remove_item_cart_path(product_id: item[:product].id), method: :delete %>
      </li>
    <% end %>
  </ul>

  <p>Total: <%= number_to_currency(@cart_items.sum { |item| item[:total_price] }) %></p>

  <%= link_to 'Proceed to Checkout', new_checkout_path, class: 'btn btn-primary' %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
