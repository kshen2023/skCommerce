<!-- app/views/carts/show.html.erb -->
<h1>Shopping Cart</h1>
<% if @items.any? %>
  <ul>
    <% @items.each do |item| %>
      <li>
        <%= item.product.name %> - Quantity: <%= item.quantity %>
        <%= button_to 'Remove', remove_item_cart_path(product_id: item.product.id), method: :delete %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
