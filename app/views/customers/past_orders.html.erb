<h1>Past Orders</h1>

<% if @orders.any? %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        <h3>Order ID: <%= order.id %></h3>
        <p>Status: <%= order.status %></p>
        <p>Total: <%= number_to_currency(order.total) %></p>
        <h4>Order Items:</h4>
        <ul>
          <% order.order_items.each do |item| %>
            <li>
              <%= item.product.name %> - <%= item.quantity %> x <%= number_to_currency(item.price) %> = <%= number_to_currency(item.price * item.quantity) %>
            </li>
          <% end %>
        </ul>
        <h4>Taxes:</h4>
        <p>GST: <%= number_to_currency(order.gst) %></p>
        <p>PST: <%= number_to_currency(order.pst) %></p>
        <p>HST: <%= number_to_currency(order.hst) %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no past orders.</p>
<% end %>
