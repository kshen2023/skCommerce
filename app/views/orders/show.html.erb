<h1>Order Details</h1>

<p>Order ID: <%= @order.id %></p>
<p>Customer: <%= @order.customer.name %></p>
<p>Status: <%= @order.status %></p>
<p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>

<h2>Items</h2>
<ul>
  <% @order_items.each do |item| %>
    <li><%= item.product.name %> - <%= item.quantity %> x <%= number_to_currency(item.price) %> = <%= number_to_currency(item.price.to_f * item.quantity) %></li>
  <% end %>
</ul>

<h2>Taxes</h2>
<p>GST: <%= number_to_currency(@order.gst) %></p>
<p>PST: <%= number_to_currency(@order.pst) %></p>
<p>HST: <%= number_to_currency(@order.hst) %></p>
<p>Total Taxes: <%= number_to_currency(@order.total_taxes) %></p>

<h2>Total Amount</h2>
<p>Total: <%= number_to_currency(@order.total_amount) %></p>

<%= link_to 'Back to Orders', orders_path, class: 'btn btn-secondary' %>
