<h2>Customer Information</h2>
<p><strong>Name:</strong> <%= @customer.name %></p>
<p><strong>Email:</strong> <%= @customer.email %></p>
<p><strong>Address:</strong> <%= @customer.address %></p>
<p><strong>Province:</strong> <%= @customer.province.province_name %></p>
<p><strong>Phone:</strong> <%= @customer.phone %></p>

<h2>Cart Summary</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.product.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><strong>Total Amount:</strong> <%= number_to_currency(@cart.total_amount) %></p>

<h2>Taxes</h2>
<p><strong>GST:</strong> <%= number_to_currency(@taxes[:gst]) %></p>
<p><strong>PST:</strong> <%= number_to_currency(@taxes[:pst]) %></p>
<p><strong>HST:</strong> <%= number_to_currency(@taxes[:hst]) %></p>
<p><strong>Total Tax:</strong> <%= number_to_currency(@taxes[:gst] + @taxes[:pst] + @taxes[:hst]) %></p>
